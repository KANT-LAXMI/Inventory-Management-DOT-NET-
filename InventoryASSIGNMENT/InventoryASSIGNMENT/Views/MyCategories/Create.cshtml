@model InventoryASSIGNMENT.Models.MyCategory



@{
    ViewBag.Title = "Add Category";
}



<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="~/NewFolder1/categories.jpg"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Add Category</h3>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.cat_name, htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.cat_comment, htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.cat_comment, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.cat_comment, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.cat_date, htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.cat_date, new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.cat_date, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg">Save</button>
                                }
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
